<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:overScrollMode="always"
    android:scrollbars="none"
    android:background="@color/color_ep_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <!-- 成绩查询 -->

        <LinearLayout
            android:id="@+id/layout_query_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_common_white_bg"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imGrade"
                android:layout_width="@dimen/icon_large_size"
                android:layout_height="@dimen/icon_large_size"
                android:layout_marginBottom="@dimen/layout_small_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/layout_small_margin"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_query_grade" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_query_grade"
                        android:textSize="@dimen/font_medium_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_large_margin"
                        android:text="@string/hint_query_grade"
                        android:textColor="@color/color_ep_font_gray" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/color_ep_gray" />
            </RelativeLayout>
        </LinearLayout>
        <!-- 等级考试查询 -->

        <LinearLayout
            android:id="@+id/layout_query_national_exam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_common_white_bg"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/icon_large_size"
                android:layout_height="@dimen/icon_large_size"
                android:layout_marginBottom="@dimen/layout_small_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/layout_small_margin"
                android:contentDescription="@string/app_name"
                android:id="@+id/imNationnalGrade"
                android:src="@drawable/ic_query_national_exam" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_query_national_exam"
                        android:textSize="@dimen/font_medium_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_large_margin"
                        android:text="@string/hint_query_national_exam"
                        android:textColor="@color/color_ep_font_gray" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/color_ep_gray" />
            </RelativeLayout>
        </LinearLayout>


        <!-- 空教室查询 -->

        <LinearLayout
            android:id="@+id/layout_query_class_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_common_white_bg"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imEmptyClassRoom"
                android:layout_width="@dimen/icon_large_size"
                android:layout_height="@dimen/icon_large_size"
                android:layout_marginBottom="@dimen/layout_small_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/layout_small_margin"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_query_class" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_query_classroom_status"
                        android:textSize="@dimen/font_medium_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_large_margin"
                        android:text="@string/hint_query_class_room"
                        android:textColor="@color/color_ep_font_gray" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/color_ep_gray" />
            </RelativeLayout>
        </LinearLayout>
        <!-- V网查询 -->

        <LinearLayout
            android:id="@+id/layout_query_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_common_white_bg"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imTel"
                android:layout_width="@dimen/icon_large_size"
                android:layout_height="@dimen/icon_large_size"
                android:layout_marginBottom="@dimen/layout_small_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/layout_small_margin"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_query_tel" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_query_tel_number"
                        android:textSize="@dimen/font_medium_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_large_margin"
                        android:text="@string/hint_query_tel"
                        android:textColor="@color/color_ep_font_gray" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/color_ep_gray" />
            </RelativeLayout>
        </LinearLayout>
        <!-- 教学计划查询 -->

        <LinearLayout
            android:layout_marginBottom="@dimen/layout_end_margin"
            android:id="@+id/layout_query_teach_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_common_white_bg"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imTeachingPlan"
                android:layout_width="@dimen/icon_large_size"
                android:layout_height="@dimen/icon_large_size"
                android:layout_marginBottom="@dimen/layout_small_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/layout_small_margin"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_query_teaching_plan" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_query_teach_plan"
                        android:textSize="@dimen/font_medium_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_large_margin"
                        android:text="@string/hint_query_teach_plan"
                        android:textColor="@color/color_ep_font_gray" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>